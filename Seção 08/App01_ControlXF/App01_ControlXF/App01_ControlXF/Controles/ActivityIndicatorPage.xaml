<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControlXF.Controles.ActivityIndicatorPage"
             Title="Acesso à API Cognum">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Executando" />
            <Entry />
            <Button x:Name="btnIsRunning" Clicked="BtnIsRunning" />
            <ActivityIndicator x:Name="ActIndicator"  Color="Red" IsRunning="{Binding IsBusy}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>