<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControlXF.Controles.DatePickerPage">
    <ContentPage.Content>
        <StackLayout>
            <DatePicker TextColor="Red" Format="dd/MM/yyyy" MinimumDate="01/01/2018" MaximumDate="01/01/2019" Date="05/31/2018" DateSelected="DateSelected" />
            <Label x:Name="lblResultado" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>