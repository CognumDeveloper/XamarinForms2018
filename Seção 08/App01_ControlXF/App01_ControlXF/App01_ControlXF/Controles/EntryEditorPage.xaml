<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControlXF.Controles.EntryEditorPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="TxtIdade"
                   TextColor="Red"
                   Placeholder="Digite sua idade"
                   PlaceholderColor="Blue" 
                   IsPassword="False" 
                
                   Keyboard="Url"
                
                   BackgroundColor="#CCCCCC"
                />

            <Label x:Name="Lbl_duplicado" />

            <Editor x:Name="TxtComentario" HeightRequest="200" />
        
            <Label x:Name="LblQuantidadeCaracteres" />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>