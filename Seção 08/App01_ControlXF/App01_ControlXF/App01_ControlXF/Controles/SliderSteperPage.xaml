<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControlXF.Controles.SliderSteperPage">
    <ContentPage.Content>
        <StackLayout>
            <Slider Minimum="0" Maximum="100" Value="50" ValueChanged="SliderValueChanged"/>
            <Label x:Name="sliderResult" />

            <Stepper Minimum="0" Maximum="10" Increment="2" Value="4" ValueChanged="StepperValueChanged"/>
            <Label x:Name="stepperResult" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>