<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_Cell.Pagina.SwitchCellPage">
    <ContentPage.Content>
        <TableView>
            <TableRoot>
                <TableSection Title="Configuração">
                    <SwitchCell On="False" Text="Backup automático" />
                    <SwitchCell On="True" Text="Salvar senha" />
                </TableSection>
                <TableSection Title="Conexões">
                    <SwitchCell On="False" Text="Soap" />
                    <SwitchCell On="True" Text="Rest" />
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>